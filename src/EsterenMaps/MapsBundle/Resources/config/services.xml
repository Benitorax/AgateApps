<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="esterenmaps.tile_size">168</parameter>
        <parameter key="esterenmaps.output_directory">%kernel.root_dir%/../web/maps_tiles/</parameter>
    </parameters>

    <services>
        <service id="esterenmaps.tiles_manager" class="EsterenMaps\MapsBundle\Services\MapsTilesManager">
            <argument key="output_directory">%esterenmaps.output_directory%</argument>
            <argument key="tile_size">%esterenmaps.tile_size%</argument>
            <argument key="kernel" type="service" id="kernel" />
        </service>
    </services>

</container>
