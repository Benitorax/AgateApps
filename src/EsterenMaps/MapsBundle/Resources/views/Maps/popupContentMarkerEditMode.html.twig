{% spaceless %}
    <h3>{{ 'Marqueur' | trans }}</h3>
    <div class="row">
        <label for="marker_popup_name" class="col-sm-2 control-label">{{ 'Nom' | trans | replace("'","&#130;") }}</label>
        <div class="col-sm-10">
            <input required="required" type="text" id="marker_popup_name" name="marker_popup_name" placeholder="{{ 'Nom' | trans | replace("'","&#130;") }}" class="form-control" value="" />
        </div>
    </div>
    <div class="row">
        <label for="marker_popup_type" class="col-sm-2 control-label">{{ 'Type' | trans }}</label>
        <div class="col-sm-10">
            <select required="required" id="marker_popup_type" name="marker_popup_type" class="form-control">
                {% for markerType in markersTypes %}
                    <option value="{{ markerType.id }}">{{ markerType.name | trans | replace("'","&#130;") }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="row">
        <label for="marker_popup_faction" class="col-sm-2 control-label">{{ 'Faction' | trans }}</label>
        <div class="col-sm-10">
            <select id="marker_popup_faction" name="marker_popup_faction" class="form-control">
                <option value="">-- {{ 'Choisissez une faction' | trans | replace("'","&#130;") }} --</option>
                {% for faction in factions %}
                    <option value="{{ faction.id }}">{{ faction.name | trans | replace("'","&#130;") }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
{% endspaceless %}