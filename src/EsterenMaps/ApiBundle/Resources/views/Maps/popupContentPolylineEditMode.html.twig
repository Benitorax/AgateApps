{% spaceless %}
    <h3>{{ 'Route' | trans }}</h3>
    <div class="row">
        <label for="polyline_popup_name" class="col-sm-2 control-label">{{ 'Nom' | trans | replace("'","&#130;") }}</label>
        <div class="col-sm-10">
            <input required="required" type="text" id="polyline_popup_name" name="polyline_popup_name" placeholder="{{ 'Nom' | trans | replace("'","&#130;") }}" class="form-control" value="" />
        </div>
    </div>
    <div class="row">
        <label for="polyline_popup_guarded" class="col-sm-2 control-label">{{ 'Garde / Patrouille régulière' | trans | replace("'","&#130;") }}</label>
        <div class="col-sm-10">
            <input type="checkbox" id="polyline_popup_guarded" name="polyline_popup_guarded" class="form-control" />
        </div>
    </div>
    <div class="row">
        <label for="polyline_popup_type" class="col-sm-2 control-label">{{ 'Type' | trans }}</label>
        <div class="col-sm-10">
            <select required="required" id="polyline_popup_type" name="polyline_popup_type" class="form-control">
                {% for routeType in routesTypes %}
                    <option value="{{ routeType.id }}">{{ routeType.name | trans | replace("'","&#130;") }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="row">
        <label for="polyline_popup_faction" class="col-sm-2 control-label">{{ 'Faction' | trans }}</label>
        <div class="col-sm-10">
            <select id="polyline_popup_faction" name="polyline_popup_faction" class="form-control">
                <option value="">-- {{ 'Choisissez une faction' | trans | replace("'","&#130;") }} --</option>
                {% for faction in factions %}
                    <option value="{{ faction.id }}">{{ faction.name | trans | replace("'","&#130;") }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="row">
        <label for="polyline_popup_markerStart" class="col-sm-2 control-label">{{ 'Départ' | trans }}</label>
        <div class="col-sm-10">
            <select id="polyline_popup_markerStart" name="polyline_popup_markerStart" class="form-control">
                <option value="">-- {{ 'Choisissez un marqueur de départ' | trans | replace("'","&#130;") }} --</option>
                {% for marker in markers %}
                    <option value="{{ marker.id }}">{{ marker.name | trans | replace("'","&#130;") }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="row">
        <label for="polyline_popup_markerEnd" class="col-sm-2 control-label">{{ 'Arrivée' | trans }}</label>
        <div class="col-sm-10">
            <select id="polyline_popup_markerEnd" name="polyline_popup_markerEnd" class="form-control">
                <option value="">-- {{ 'Choisissez un marqueur de fin' | trans | replace("'","&#130;") }} --</option>
                {% for marker in markers %}
                    <option value="{{ marker.id }}">{{ marker.name | trans | replace("'","&#130;") }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
{% endspaceless %}
