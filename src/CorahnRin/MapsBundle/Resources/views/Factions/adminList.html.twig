{% extends "CorahnRinAdminBundle:Admin:layout.html.twig" %}

{% block title %}{{ 'Factions' | trans }} - {{ parent() }}{% endblock %}

{% block admin_content %}

<div class="navbar navbar-inverse">
    <div class="">
        <ul class="nav navbar-nav">
            <li><a href="{{ url('corahnrin_maps_factions_add') }}">
                <span class="glyphicon icon-plus"></span>
                {{ 'Ajouter une Faction' | trans }}
            </a></li>
        </ul>
    </div>
</div>

<table class="table table-condensed">
    <tr>
        <th>#</th>
        <th>{{ 'Nom' | trans }}</th>
        <th>{{ 'Description' | trans }}</th>
        <th>{{ 'Actions' | trans }}</th>
    </tr>
    {% for faction in factions %}
    <tr>
        <td>{{ faction.id }}</td>
        <td><strong>{{ faction.name }}</strong></td>
        <td>{{ faction.description }}</td>
        <td>
            <a href="{{ url('corahnrin_maps_factions_edit', {'id':faction.id}) }}" class="btn btn-sm btn-inverse">{{ 'Éditer la carte' | trans }}</a>
        </td>
    </tr>
    {% else %}
    <tr><td colspan="4">{{ 'Aucun élément' | trans }}</td></tr>
    {% endfor %}
</table>

{% endblock %}