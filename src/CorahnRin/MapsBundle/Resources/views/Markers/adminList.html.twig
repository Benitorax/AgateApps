{% extends "CorahnRinAdminBundle:Admin:layout.html.twig" %}

{% block title %}{{ 'Liste des cartes' | trans }} - {{ parent() }}{% endblock %}

{% block admin_content %}

<div class="navbar navbar-inverse">
    <div class="">
        <ul class="nav navbar-nav">
            <li><a href="{{ url('corahnrin_maps_markers_add') }}">
                <span class="glyphicon icon-plus"></span>
                {{ 'Ajouter un marqueur' | trans }}
            </a></li>
            <li><a href="{{ url('corahnrin_maps_markers_addtype') }}">
                <span class="glyphicon icon-plus"></span>
                {{ 'Ajouter un Type de marqueur' | trans }}
            </a></li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <h3>{{ 'Marqueurs' | trans }}</h3>
        <table class="table table-condensed">
            <tr>
                <th>#</th>
                <th>{{ 'Nom' | trans }}</th>
                <th>{{ 'Type' | trans }}</th>
                <th>{{ 'Faction' | trans }}</th>
                <th>{{ 'Actions' | trans }}</th>
            </tr>
            {% for marker in markers %}
            <tr>
                <td>{{ marker.id }}</td>
                <td><strong>{{ marker.name }}</strong></td>
                <td>{{ marker.markerType.name }}</td>
                <td>{{ marker.faction.name is defined ? marker.faction.name : ' - ' }}</td>
                <td>
                    <a href="{{ url('corahnrin_maps_markers_edit', {'id':marker.id}) }}" class="btn btn-sm btn-inverse">{{ 'Éditer' | trans }}</a>
                </td>
            </tr>
            {% else %}
            <tr><td colspan="5">{{ 'Aucun élément' | trans }}</td></tr>
            {% endfor %}
        </table>
    </div>
    <div class="col-sm-6">
        <h3>{{ 'Types de marqueurs' | trans }}</h3>
        <table class="table table-condensed">
            <tr>
                <th>#</th>
                <th>{{ 'Nom' | trans }}</th>
                <th>{{ 'Actions' | trans }}</th>
            </tr>
            {% for markerType in markersTypes %}
            <tr>
                <td>{{ markerType.id }}</td>
                <td><strong>{{ markerType.name }}</strong></td>
                <td>
                    <a href="{{ url('corahnrin_maps_markers_edittype', {'id':markerType.id}) }}" class="btn btn-sm btn-inverse">{{ 'Éditer' | trans }}</a>
                </td>
            </tr>
            {% else %}
            <tr><td colspan="5">{{ 'Aucun élément' | trans }}</td></tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}