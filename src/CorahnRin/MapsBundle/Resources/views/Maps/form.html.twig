<div class="well">
    <form method="post" {{ form_enctype(form) }} class="form-horizontal">
        
        {{ form_row(form.name, {'label':'Nom'}) }}
        {{ form_row(form.description) }}
            
        <div class="row">
            <div class="col-sm-5 col-sm-offset-2">{{ form_row(form.image) }}</div>
            <div class="col-sm-5">{{ form_row(form.maxZoom,{'label':'Zoom'}) }}</div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <button type="submit" class="btn btn-default">{{ 'Envoyer' | tr }}</button>
            </div>
        </div>
        
        {{ form_rest(form) }}
    </form>
    <div class="clearfix"></div>
</div>