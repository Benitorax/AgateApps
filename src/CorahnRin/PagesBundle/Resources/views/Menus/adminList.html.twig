{% extends "CorahnRinAdminBundle:Admin:layout.html.twig" %}

{% block title %}{{ 'Liste des cartes' | trans }} - {{ parent() }}{% endblock %}

{% block admin_content %}

<div class="navbar navbar-inverse">
    <div class="">
        <ul class="nav navbar-nav">
            <li><a href="{{ url('corahnrin_maps_maps_add') }}">
                <span class="glyphicon icon-plus"></span>
                {{ 'Ajouter une carte' | trans }}
            </a></li>
        </ul>
    </div>
</div>

<table class="table table-condensed">
    <tr>
        <th>#</th>
        <th>{{ 'Nom' | trans }}</th>
        <th>{{ 'Description' | trans }}</th>
        <th>{{ 'Zoom maximum' | trans }}</th>
        <th>{{ 'Actions' | trans }}</th>
    </tr>
    {% for map in maps %}
    <tr>
        <td>{{ map.id }}</td>
        <td><strong>{{ map.name }}</strong></td>
        <td>{{ map.description }}</td>
        <td>{{ map.maxZoom }}</td>
        <td>
            <a href="{{ url('corahnrin_maps_maps_view', {'id':map.id, 'nameSlug':map.nameSlug}) }}" class="btn btn-sm btn-inverse">{{ 'Voir la carte' | trans }}</a>
            <a href="{{ url('corahnrin_maps_maps_edit', {'id':map.id}) }}" class="btn btn-sm btn-inverse">{{ 'Éditer la carte' | trans }}</a>
        </td>
    </tr>
    {% else %}
    <tr><td colspan="4">{{ 'Aucun élément' | trans }}</td></tr>
    {% endfor %}
</table>

{% endblock %}