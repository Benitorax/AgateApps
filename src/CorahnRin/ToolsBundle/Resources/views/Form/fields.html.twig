{% block form_row %}
    {% spaceless %}
        <div class="row form-group">
            {{ form_label(form, null, {'label_attr':{'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form, {'attr':{'class':'form-control col-lg-6'}} ) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

