{% extends "::layout.html.twig" %}

{% block title %}Index de la traduction - {{ parent() }}{% endblock %}

{% block content_for_layout %}
    <h1>Traductions</h1>
    <div class="row">
        {% for locale,catalogue in translations %}
            <div class="col-lg-3">
               <h3>{{ locale | upper }}</h3>
               <ul class="list-unstyled">
               {% for domain, translation in catalogue %}
                    <li>
                        <a class="bl" href="{{ url('corahnrin_translation_translate_edit', {'domain':domain,'locale':locale}) }}">
                            {{ domain }}
                            <span class="pull-right label label-{{ translation.class }}">({{ translation.count }} / {{ translation.total }})</span>
                        </a>
                    </li>
               {% else %}
                   <li><div class="alert alert-danger">{{ 'Aucun élément' | trans }}</div></li>
               {% endfor %}
               {% if loop.index % 4 == 0 %}
                    </div><div class="row">
               {% endif %}
            </div>
            {% else %}
            <div class="col-lg-12 alert alert-danger">{{ 'Aucun élément' | trans }}</div>
        {% endfor %}
    </div>
{% endblock %}
