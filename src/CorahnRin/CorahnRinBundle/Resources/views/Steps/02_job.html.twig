{% extends '@CorahnRin/Steps/step_base.html.twig' %}

{% block step_content %}

<input type="hidden" name="job_value" id="job_value" value="{{ job_value }}" />
{% for jobs in jobs_list %}
    <h3>{{ jobs[0].book.name | trans }}</h3>

        {% for job in jobs %}

                <div id="job_{{ job.id }}" class="chip btn-gen-choice {{ job_value == job.id ? 'active' : '' }}" data-toggle="btn-gen-choice" data-input-value="{{ job.id }}" data-target-node="job_value">
                    <a class="modal-activator" href="#modal_job_{{ job.id }}">
                        <img class="modal-img" src="{{ asset('img/generator/search.png') }}" title="{{ 'step_2.modal.details'|trans({}, 'CorahnRinBundle') }}">
                    </a>
                    {{ job.name | trans }}
                </div>

                <div id="modal_job_{{ job.id }}" class="modal">
                    <div class="modal-content">
                        <h4>{{ job.name | trans }}</small></h4>
                        <p>{{ job.description | trans | raw }}</p>
                        <p>{{ 'domain.primary' | trans({}, 'CorahnRinBundle') }} : {{ job.domainPrimary.name | trans }}</p>
                        <p>
                            {{ 'domain.secondary' | trans({}, 'CorahnRinBundle') }} :
                            {% for domain in job.domainsSecondary %}
                                {% if loop.index0 > 0 %} &ndash; {% endif %}
                                {{ domain.name | trans }}
                            {% else %}
                                {{ 'domain.manual' | trans({}, 'CorahnRinBundle') }}
                            {% endfor %}
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn modal-action modal-close waves-effect btn-flat">{{ 'button.close' | trans }}</button>
                        <button type="button" class="btn modal-action modal-close waves-effect" data-dist-click data-target-node="job_{{ job.id }}">{{ 'button.select' | trans }}</button>
                    </div>
                </div>
        {% endfor %}{# jobs #}

{% endfor %}{# books #}

{% endblock %}
