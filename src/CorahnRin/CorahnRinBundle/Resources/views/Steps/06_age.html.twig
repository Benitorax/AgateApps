{% extends '@CorahnRin/Steps/step_base.html.twig' %}

{% block step_content %}
    <div class="input-field">
        <select name="age" id="age_value">
            {% for i in 16..35 %}
                <option value="{{ i }}" {{ age == i ? 'selected' }}>{{ i }}</option>
            {% endfor %}
        </select>
        <label for="age_value">{{ 'age.select' | trans({}, 'CorahnRinBundle') | raw }}</label>
    </div>
    <p class="help-block">{{ 'age.min_max' | trans({}, 'CorahnRinBundle') }}</p>
{% endblock %}
