{% extends '@CorahnRin/Steps/step_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block step_content %}

    <div class="card-panel teal lighten-4">
        {{ 'domains_bonuses.explanation'|trans({}, 'CorahnRinBundle')|raw }}
    </div>

    <div class="card-panel blue lighten-4">

        {{ 'domains_bonuses.remaining'|trans({}, 'CorahnRinBundle') }}

        <div class="chip bordered" id="bonus_points">
            <span id="remaining_bonus_points">{{ bonus_value }}</span>&nbsp;/<span>{{ bonus_max }}</span>
        </div>
    </div>

    {% for domains_chunk in all_domains|batch(4, []) %}

        <div class="row">
        {% for id, domain in domains_chunk %}

            {% set value = domains_values[id] %}

            <div class="col s3 domain hoverable" data-domain-id="{{ id }}">
                <input type="hidden" name="domains_bonuses[{{ id }}]" value="{{ value }}">
                <h5>
                    {{ domain.name }}
                </h5>
                <div class="domain_button_group">
                    {% for i in [0, 1, 2, 3, 5] %}

                        {% set selected = i == value %}

                        {% set disabled =
                            i < value
                            or value == 5
                            or i > (value + 1)
                        %}

                        {#
                            If button is not disabled we add the "domain-change" class.
                            This will be the one that will receive the event listeners.
                        #}
                        {% set class -%}
                            {{- value == i ? ' active' -}}
                            {{- disabled ? ' disabled' : ' domain-change' -}}
                        {%- endset %}
                        <button type="button" data-change="{{ i }}" class="domain_button_value btn btn-inverse {{ class }}">
                            {{ i }}
                        </button>
                    {% endfor %}
                </div>
            </div>

        {% endfor %}
        </div>

    {% endfor %}

{% endblock %}
