{% extends '@CorahnRin/Steps/step_base.html.twig' %}

{% block step_content %}

    {% for domains_chunk in all_domains|batch(4, []) %}

        <div class="row">
        {% for id, domain in domains_chunk %}

            {% set value = domains_values[id] is defined ? domains_values[id] : 0 %}

            <div class="col-sm-3 domain" data-stepid="{{ id }}" data-jobval="{{ value }}">
                <h4>
                    {{ domain.name }}
                </h4>
                <div class="btn-group">
                    {% for i in [0, 1, 2, 3, 5] %}
                        <button type="button" data-change="{{ i }}" class="btn btn-inverse btn-xs">
                            {%- if i == 0 -%}
                                &#9734;
                            {%- else -%}
                                {%- for j in 1..i -%}
                                    &#9733;
                                {%- endfor -%}
                            {%- endif -%}
                        </button>
                    {% endfor %}
                </div>
            </div>

        {% endfor %}
        </div>

    {% endfor %}

{% endblock %}
