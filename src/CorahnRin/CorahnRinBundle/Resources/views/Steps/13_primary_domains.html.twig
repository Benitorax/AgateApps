{% extends '@CorahnRin/Steps/step_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {# The 3 files associated to step 13 are merged into one in the Gulpfile #}
    <script type="text/javascript" src="{{ asset('js/step_13_primary_domains.js') }}"></script>
{% endblock %}

{% block step_content %}

    <h3>{{ job.name }}</h3>

    <div class="card-panel teal lighten-4">

        <strong>{{ 'primary_domains.additionnal_options'|trans({}, 'CorahnRinBundle') }}&nbsp;:</strong>
        <br>
        <br>

        <input type="hidden" name="ost" id="ost" value="{{ domains_values['ost'] }}">
        <button type="button" class="btn btn-small btn-inverse"><span class="fa fa-asterisk"></span></button>&nbsp;&equals;
        {{ 'primary_domains.ost_service_button'|trans({}, 'CorahnRinBundle')|raw }}

        {% if scholar %}
            <br>
            <br>
            <input type="hidden" name="scholar" id="scholar" value="{{ domains_values['scholar'] }}">
            <button type="button" class="btn btn-small btn-inverse"><span class="fa fa-book"></span></button>&nbsp;&equals;
            {{ 'primary_domains.scholar_button'|trans({}, 'CorahnRinBundle') }}
        {% endif %}

    </div>

    <div class="card-panel blue lighten-4">
        {{ 'primary_domains.explanation'|trans({}, 'CorahnRinBundle')|raw }}
    </div>
    <div class="card-panel blue lighten-4">
        <table id="information_table">
            <tbody>
                <tr>
                    <td class="domainValue1">
                        <strong>{{ 'primary_domains.info_table.numberOf1'|trans({}, 'CorahnRinBundle') }}</strong>&nbsp;:
                    </td>
                    <td>
                        <span id="numberOf1">{{ number_of[1] }}</span>&nbsp;/&nbsp;2
                    </td>
                </tr>
                <tr>
                    <td class="domainValue2">
                        <strong>{{ 'primary_domains.info_table.numberOf2'|trans({}, 'CorahnRinBundle') }}</strong>&nbsp;:
                    </td>
                    <td>
                        <span id="numberOf2">{{ number_of[2] }}</span>&nbsp;/&nbsp;2
                    </td>
                </tr>
                <tr>
                    <td class="domainValue3">
                        <strong>{{ 'primary_domains.info_table.numberOf3'|trans({}, 'CorahnRinBundle') }}</strong>&nbsp;:
                    </td>
                    <td>
                        <span id="numberOf3">{{ number_of[3] }}</span>&nbsp;/&nbsp;1
                    </td>
                </tr>
                {% if scholar %}
                    <tr>
                        <td>
                            <strong>{{ 'primary_domains.numberOfScholar'|trans({}, 'CorahnRinBundle') }}</strong>&nbsp;:
                        </td>
                        <td>
                            <span id="scholarDisplay">{{ domains_values['scholar'] ? '1' : '0' }}</span>&nbsp;/&nbsp;1
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
        <div id="numberOfCompleted" style="display: none;">
            <div class="chip">
                Ok !
            </div>
        </div>
    </div>

    {# For jobs that have no secondary domain, we allow the user to choose any. #}
    {% set show_all_secondary_domains = (secondary_domains|length) == 0 %}

    {% for domains_chunk in all_domains|batch(4, []) %}

        <div class="row">
        {% for id, domain in domains_chunk %}

            {% set value = domains_values['domains'][id] %}

            <div class="col s3 domain hoverable" data-domain-id="{{ id }}">
                <input type="hidden" name="domains[{{ id }}]" value="{{ value }}">
                <h5>
                    {{ domain.name }}
                </h5>
                <div class="suppl">
                    <button type="button" data-type="ost" data-domain-id="{{ id }}" class="btn btn-inverse btn-small{{ domains_values['ost'] == id ? ' active' }}" data-toggle="tooltip" title="{{ 'primary_domains.ost_button_title' | trans({}, 'CorahnRinBundle') }}">
                        <span class="fa fa-asterisk"></span>
                    </button>
                    {% if scholar and id in scholar_domains_ids %}
                        <button type="button" data-type="scholar" data-domain-id="{{ id }}" class="btn btn-inverse btn-small{{ id == domains_values['scholar'] ? ' active' }}" data-toggle="tooltip" title="{{ 'primary_domains.scholar_button_use' | trans({}, 'CorahnRinBundle') }}">
                            <span class="fa fa-book"></span>
                        </button>
                    {% endif %}
                </div>
                <hr>
                <div class="domain_button_group">
                    {% for i in [0, 1, 2, 3, 5] %}

                        {% set selected = i == value %}

                        {% set disabled =
                            value == 5
                            or (i == 3 and id not in secondary_domains and not show_all_secondary_domains)
                            or (i == 5 and value != 5)
                        %}

                        {#
                            If button is not disabled we add the "domain-change" class.
                            This will be the one that will receive the event listeners.
                        #}
                        {% set class -%}
                            {{- value == i ? ' active' -}}
                            {{- disabled ? ' disabled' : ' domain-change' -}}
                        {%- endset %}
                        <button type="button" data-change="{{ i }}" class="domain_button_value btn btn-inverse {{ class }}">
                            {{ i }}
                        </button>
                    {% endfor %}
                </div>
            </div>

        {% endfor %}
        </div>

    {% endfor %}

{% endblock %}
