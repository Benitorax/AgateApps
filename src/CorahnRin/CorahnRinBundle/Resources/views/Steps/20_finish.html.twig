{% extends '@CorahnRin/Steps/step_base.html.twig' %}

{% block step_content %}
    <div class="character_details">
        <div class="row">
            <div class="col l8">
                <h3>
                    {{ 'character.name'|trans({}, 'CorahnRinBundle') }}&nbsp;:
                    {{ character.name }}
                </h3>
            </div>
            <div class="col l4">
                <h3>
                    {{ 'character.player_name'|trans({}, 'CorahnRinBundle') }}&nbsp;:
                    {{ character.playerName }}
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col l3"><h3>{{ 'character.sex_title'|trans({}, 'CorahnRinBundle') }}&nbsp;:&nbsp;{{ character.sex|trans({}, 'CorahnRinBundle') }}</h3></div>
            <div class="col l2"><h3>{{ 'character.age'|trans({}, 'CorahnRinBundle') }}&nbsp;:&nbsp;{{ character.age }}</h3></div>
            <div class="col l3"><h3>{{ 'character.people'|trans({}, 'CorahnRinBundle') }}&nbsp;:&nbsp;{{ character.people.name }}</h3></div>
            <div class="col l4"><h3>{{ 'character.job'|trans({}, 'CorahnRinBundle') }}&nbsp;:&nbsp;{{ character.job.name }}</h3></div>
        </div>
        <div class="row">
            <div class="col l4">
                <h3>{{ 'character.ways'|trans({}, 'CorahnRinBundle') }}</h3>
                {% for charWay in character.ways %}
                    <h4>{{ charWay.way.name }} <span class="right">{{ charWay.score }}</span></h4>
                {% endfor %}
            </div>
            <div class="col l4">
                <h3>{{ 'character.advantages'|trans({}, 'CorahnRinBundle') }}</h3>
                {% for charAdvantage in character.advantages %}
                    {% if loop.first %}<ul class="list-bullet">{% endif %}
                    <li><h4>
                        {{ charAdvantage.advantage.name }}&nbsp;
                        {{ charAdvantage.score > 1 ? ('(x'~charAdvantage.score~')') }}
                    </h4></li>
                    {% if loop.last %}</ul>{% endif %}
                {% endfor %}
                <hr>
                <h3>{{ 'character.disadvantages'|trans({}, 'CorahnRinBundle') }}</h3>
                {% for charAdvantage in character.disadvantages %}
                    {% if loop.first %}<ul class="list-bullet">{% endif %}
                    <li><h4>
                            {{ charAdvantage.advantage.name }}&nbsp;
                            {{ charAdvantage.score > 1 ? ('(x'~charAdvantage.score~')') }}
                        </h4></li>
                    {% if loop.last %}</ul>{% endif %}
                {% endfor %}
            </div>
            <div class="col l4">
                <h3>{{ 'character.health_state'|trans({}, 'CorahnRinBundle') }}</h3>
                <small>({{ 'character.max_health'|trans({}, 'CorahnRinBundle') }}&nbsp;: {{ character.maxHealth }})</small>
                <hr>
                <em>coming soon...</em>
            </div>
        </div>
    </div>
{% endblock %}
