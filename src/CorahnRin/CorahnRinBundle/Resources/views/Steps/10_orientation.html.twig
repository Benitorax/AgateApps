{% extends '@CorahnRin/Steps/step_base.html.twig' %}

{% block step_content %}

{% if can_be_changed %}
<input type="hidden" name="gen-div-choice" id="gen-div-choice" value="{{ orientation_value }}" />
{% endif %}
<div class="row">
    {% for id, orientation in orientations %}
    <div class="col s6 gen-div-choice{{ can_be_changed ? '' : '-disabled' }}{{ orientation_value == id ? ' selected' }}"
         data-divchoice-value="{{ id }}">
        <article>
            <header>
                <h3 class="text-center">{{ orientation.name | trans }}</h3>
            </header>
            <p>{{ orientation.description | trans }}</p>
        </article>
    </div>
    {% endfor %}
</div>

{% endblock %}
