{% extends "PierstovalAdminBundle:Admin:layout.html.twig" %}

{% block title %}{{ 'Désordres' | trans }} - {{ parent() }}{% endblock %}

{% block admin_content %}

<ol class="breadcrumb">
    <li><a href="{{ url('pierstoval_admin_admin_index') }}">{{ 'Accueil' | trans }}</a></li>
    <li><a href="{{ url('corahnrin_admin_disorders_adminlist') }}">{{ 'Disorders' | trans }}</a></li>
</ol>

<h1>{{ 'Désordres' | trans }}</h1>

{% if is_granted('ROLE_ADMIN_GENERATOR_SUPER') %}
    <div class="navbar navbar-inverse">
        <div class="">
            <ul class="nav navbar-nav">
                <li><a href="{{ url('corahnrin_admin_disorders_add') }}">
                    <span class="glyphicon icon-plus"></span>
                    {{ 'Ajouter un désordre mental' | trans }}
                </a></li>
            </ul>
        </div>
    </div>
{% endif %}

<table class="table table-condensed">
    <tr>
        <th class="mw50">#</th>
        <th>{{ 'Nom' | trans }}</th>
        <th class="w150">{{ 'Actions' | trans }}</th>
    </tr>
    {% for disorder in disorders %}
    <tr>
        <td>{{ disorder.id }}</td>
        <td>{{ disorder.name }}</td>
        <td>
            <a href="{{ url('corahnrin_admin_disorders_edit', {'id':disorder.id}) }}" class="btn btn-sm btn-inverse">{{ 'Éditer' | trans }}</a>
            {% if is_granted('ROLE_ADMIN_GENERATOR_SUPER') %}
            <a href="{{ url('corahnrin_admin_disorders_delete', {'id':disorder.id}) }}" class="btn btn-sm btn-danger">{{ 'Supprimer' | trans }}</a>
            {% endif %}
        </td>
    </tr>
    {% else %}
    <tr><td colspan="5">{{ 'Aucun élément' | trans }}</td></tr>
    {% endfor %}
</table>

{% endblock %}