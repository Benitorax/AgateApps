{% extends "::layout.html.twig" %}

{% block title %}Liste des personnages - {{ parent() }}{% endblock %}

{% block content_for_layout %}

<h2>{{'Visualiser un personnage'}}</h2>

<table class="table table-condensed table-striped">
	<tr>
		<th><a href="{{ path('corahnrin_characters_viewer_list',{'field':'id'}) }}" class="btn btn-link">#</a></th>
		<th><a href="{{ path('corahnrin_characters_viewer_list',{'field':'name'}) }}" class="btn btn-link">{{ 'Nom' | tr }}</a></th>
		<th><a href="#{#{ path('corahnrin_characters_viewer_list',{'field':'job'}) }#}" class="btn btn-link">{{ 'Métier' | tr }}</a></th>
		<th><a href="{{ path('corahnrin_characters_viewer_list',{'field':'people'}) }}" class="btn btn-link">{{ 'Peuple' | tr }}</a></th>
		<th><a href="{{ path('corahnrin_characters_viewer_list',{'field':'region_id'}) }}" class="btn btn-link">{{ 'Région de naissance' | tr }}</a></th>
	</tr>
	{% for character in list %}
		<tr>
			<td>{{ character.id }}</td>
			<td><a href="{{ path('corahnrin_characters_viewer_view', {'id':character.id,'nameSlug':character.nameSlug}) }}" class="btn btn-link btn-sm" title="{{ 'Voir le personnage %character_name%' | tr({'%character_name%':character.name}) }}">{{ character.name }}</a></td>
			<td>{{ character.job ? character.job.name : '(Personnalisé) '~character.jobCustom | tr}}</td>
			<td>{{ character.people | tr }}</td>
			<td>{{ character.region.name | tr }}</td>
		</tr>
	{% endfor %}
</table>

{% endblock %}
