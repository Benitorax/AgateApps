{% extends "CorahnRinAdminBundle:Admin:layout.html.twig" %}

{% block title %}{{ 'Miracles' | trans }} - {{ parent() }}{% endblock %}

{% block admin_content %}

<ol class="breadcrumb">
    <li><a href="{{ url('corahnrin_admin_admin_index') }}">{{ 'Accueil' | trans }}</a></li>
    <li><a href="{{ url('corahnrin_characters_miracles_adminlist') }}">{{ 'Miracles' | trans }}</a></li>
</ol>

<h1>{{ 'Miracles' | trans }}</h1>

{% if is_granted('ROLE_ADMIN_GENERATOR_SUPER') %}
    <div class="navbar navbar-inverse">
        <div class="">
            <ul class="nav navbar-nav">
                <li><a href="{{ url('corahnrin_characters_miracles_add') }}">
                    <span class="glyphicon icon-plus"></span>
                    {{ 'Ajouter un miracle' | trans }}
                </a></li>
            </ul>
        </div>
    </div>
{% endif %}

<table class="table table-condensed">
    <tr>
        <th>#</th>
        <th>{{ 'Nom' | trans }}</th>
        <th>{{ 'Description' | trans }}</th>
        <th>{{ 'Mineur' | trans }} / {{ 'Majeur' | trans }}</th>
        <th>{{ 'Livre' | trans }}</th>
        <th>{{ 'Actions' | trans }}</th>
    </tr>
    {% for miracle in miracles %}
    <tr>
        <td>{{ miracle.id }}</td>
        <td>{{ miracle.name }}</td>
        <td>{{ miracle.description }}</td>
        <td>{{ miracle.isMajor ? 'Majeur' : 'Mineur' }}</td>
        <td>{{ miracle.book.name is defined ? miracle.book.name : ' - ' }}</td>
        <td>
            <a href="{{ url('corahnrin_characters_miracles_edit', {'id':miracle.id}) }}" class="btn btn-sm btn-inverse">{{ 'Éditer' | trans }}</a>
            {% if is_granted('ROLE_ADMIN_GENERATOR_SUPER') %}
            <a href="{{ url('corahnrin_characters_miracles_delete', {'id':miracle.id}) }}" class="btn btn-sm btn-danger">{{ 'Supprimer' | trans }}</a>
            {% endif %}
        </td>
    </tr>
    {% else %}
    <tr><td colspan="5">{{ 'Aucun élément' | trans }}</td></tr>
    {% endfor %}
</table>

{% endblock %}