<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="corahn_rin_generator.sheets_manager.class">CorahnRin\GeneratorBundle\Services\Sheets</parameter>
        <parameter key="corahn_rin_generator.sheets_folder">%kernel.root_dir%/../src/CorahnRin/GeneratorBundle/SheetsManagers/files</parameter>
        <parameter key="corahn_rin_generator.sheets_output">%kernel.cache_dir%/character_sheets/</parameter>

        <parameter key="corahn_rin_generator.steps_loader.class">CorahnRin\GeneratorBundle\Steps\StepLoader</parameter>
        <parameter key="corahn_rin_generator.steps_managers">%kernel.root_dir%/../src/CorahnRin/GeneratorBundle/Steps</parameter>
        <parameter key="corahn_rin_generator.steps_views">CorahnRinGeneratorBundle:Generator</parameter>
    </parameters>

    <services>
        <service id="corahn_rin_generator.sheets_manager" class="%corahn_rin_generator.sheets_manager.class%">
            <argument key="sheets_folder">%corahn_rin_generator.sheets_folder%</argument>
            <argument key="translator" type="service" id="translator" />
            <argument key="kernel" type="service" id="kernel" />
        </service>
        <service id="corahn_rin_generator.steps_loader" class="%corahn_rin_generator.steps_loader.class%">
            <argument key="steps_manager_directory">%corahn_rin_generator.steps_managers%</argument>
            <argument key="steps_views_directory">%corahn_rin_generator.steps_views%</argument>
        </service>
    </services>
</container>
