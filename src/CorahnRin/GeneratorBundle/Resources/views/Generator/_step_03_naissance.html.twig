<input type="hidden" name="region_value" id="region_value" value="{{ region_value }}" />

<div id="generator_world_map" style="width: 100%;overflow:hidden;background: no-repeat top left transparent url({{ url('corahnrin_maps_tiles_generatemapimage', {'id':1,"zoom":2,"dimensions-type":"p","width":1000,"height":753,"position-type":"p"}) }});">
    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" style="width:1000px;height:753px;overflow:scroll;">
        {% for region in regions_list %}
            <polygon style="-webkit-transform: scale(0.2,0.2);-moz-transform: scale(0.2,0.2);-ms-transform: scale(0.2,0.2);-o-transform: scale(0.2,0.2);transform: scale(0.2,0.2);" points="{{ region.coordinates }}" title="{{ region.name }}" data-region-id="{{ region.id }}" {{ region_value == region.id ? ' class="checked"' : '' }} />
        {% endfor %}
    </svg>
</div>