{% block form_row %}
    {% spaceless %}
        {% set hasError = (errors|length > 0) %}
        <div class="row form-group{{ hasError ? ' has-error' : '' }}">
            {{ form_label(form, null, {'label_attr':{'class':'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {% if form.vars.block_prefixes.1 not in ['checkbox','radio','collection','repeated','hidden','button','reset','submit','form'] %}
                    {{ form_widget(form, {'hasError':hasError, 'attr':{'class':'form-control col-lg-2'}}) }}
                {% else %}
                    {{ form_widget(form) }}
                {% endif %}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

