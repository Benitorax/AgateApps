<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="pierstoval_tools.imagick.path">/usr/bin/</parameter>
    </parameters>

    <services>
        <service id="pierstoval_tools.twig.json" class="Pierstoval\Bundle\ToolsBundle\Twig\JsonExtension">
            <tag name="twig.extension" />
        </service>

        <service id="pierstoval_tools.imagick" class="Pierstoval\Component\Imagick\Imagick">
            <argument id="convert_path">%pierstoval_tools.imagick.path%</argument>
        </service>
    </services>
</container>
