							<ul class="dropdown-menu">
								{% for loc, language in langs %}
								    {% if loc == locale %}
                                        <li class="active"><a>{{ language | trans }}</a></li>
                                    {% elseif route_name is defined and route_name is not empty %}
                                        <li><a href="{{ url(route_name, (route_params | merge({'_locale':loc})) ) }}">{{ language | trans }}</a></li>
                                    {% else %}
                                        {% set route_name = app.request.attributes.get('_route') %}
                                        {% if route_name is not empty %}
                                            <li><a href="{{ url(route_name, (route_params | merge({'_locale':loc})) ) }}">{{ language | trans }}</a></li>
