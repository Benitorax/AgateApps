                                    {{ macros.teamMember(name, length, loop.index0) }}
                                {% endfor %}
                            </div>
                        {% endfor %}

                        <div class="card green lighten-5">
                            <div class="card-content text-xs">
                                {{ 'team.friends_thanks'|trans|raw }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock %}
