<?xml version="1.0" encoding="UTF-8"?>

<!-- http://phpunit.de/manual/4.1/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.8/phpunit.xsd"
         backupGlobals="false"
         backupStaticAttributes="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         colors="true"
         verbose="true"
         bootstrap="./phpunit/bootstrap.php"
         beScritAboutTestsThatDoNotTestAnything="true"
         beScritAboutOutputDuringTests="true"
         beScritAboutTestSize="true"
         beScritAboutChangestoGlobalState="true"
         checkForUnintentionallyCoveredCode="true"
>

    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>./phpunit/*</directory>
        </testsuite>
    </testsuites>

    <!--
    <logging>
        <log type="coverage-html" target="../build/log/report" lowUpperBound="35" highLowerBound="70" />
        <log type="coverage-clover" target="../build/log/coverage.xml" />
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false" />
    </logging>
    -->

    <php>
        <server name="KERNEL_DIR" value="../app/" />
        <ini name="zend.enable_gc" value="0" />
    </php>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory>../src</directory>
            <exclude>
                <directory>../src/*Bundle/Resources</directory>
                <directory>../src/*/*Bundle/Resources</directory>
                <directory>../src/*/Bundle/*Bundle/Resources</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
