{
    "name":        "esteren/esteren",
    "license":     "proprietary",
    "type":        "project",
    "description": "Global Esteren project",
    "autoload":    {
        "psr-0": {
            "":                "src/",
            "SymfonyStandard": "app/"
        }
    },
    "require":     {
        "php":                                  ">=5.3.3",
        "symfony/symfony":                      "2.5.*",
        "doctrine/orm":                         "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle":             "~1.2",
        "twig/extensions":                      "~1.0",
        "symfony/assetic-bundle":               "~2.3",
        "symfony/swiftmailer-bundle":           "~2.3",
        "symfony/monolog-bundle":               "~2.4",
        "sensio/distribution-bundle":           "~3.0",
        "sensio/framework-extra-bundle":        "~3.0",
        "incenteev/composer-parameter-handler": "~2.0",

        "jms/serializer":                  ">=0.16,<1",
        "jms/serializer-bundle":           ">=0.13,<1",
        "jms/i18n-routing-bundle":         "1.*",
        "friendsofsymfony/user-bundle":    "~1.3",
        "friendsofsymfony/rest-bundle":    "1.*",
        "stof/doctrine-extensions-bundle": "~1.1@dev",

        "sonata-project/seo-bundle":                "~1",
        "sonata-project/page-bundle":               ">=2.3.7,<2.4",
        "sonata-project/intl-bundle":               "~2.2",
        "sonata-project/user-bundle":               "~2.2",
        "sonata-project/cache-bundle":              "~2.1",
        "sonata-project/admin-bundle":              "~2.2",
        "sonata-project/block-bundle":              "~2.2",
        "sonata-project/media-bundle":              "~2.2",
        "sonata-project/datagrid-bundle":           "~2.2@dev",
        "sonata-project/formatter-bundle":          "~2.3",
        "sonata-project/doctrine-orm-admin-bundle": "~2.2"
    },
    "require-dev": {
        "sensio/generator-bundle":           "~2.3",
        "doctrine/doctrine-fixtures-bundle": "2.2.*"
    },
    "scripts":     {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd":          [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ],
        "post-update-cmd":           [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ]
    },
    "config":      {
        "bin-dir":             "bin",
        "autoloader-suffix":   "EsterenSf2",
        "optimize-autoloader": true
    },
    "extra":       {
        "symfony-app-dir":      "app",
        "symfony-bin-dir":      "bin",
        "symfony-var-dir":      "var",
        "symfony-web-dir":      "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias":         {
            "dev-master": "0.x-dev"
        }
    },
    "authors":     [
        {
            "name":     "Alex \"Pierstoval\" Ancelet",
            "email":    "pierstoval@gmail.com",
            "homepage": "http://www.pierstoval.com",
            "role":     "Lead Developer"
        },
        {
            "name":     "Joelle \"Iris\" Deschamp",
            "email":    "iris.d.automne@gmail.com",
            "homepage": "http://iris-d-automne.over-blog.fr/",
            "role":     "Tester"
        },
        {
            "name":     "Nelyhann",
            "email":    "nelyhann@gmail.com",
            "homepage": "http://www.esteren.org/",
            "role":     "Coordinator"
        }
    ]
}
