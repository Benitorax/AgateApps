{
    "name": "esteren/esteren",
    "license": "proprietary",
    "description": "Global Esteren project",
    "type": "project",
    "require": {
        "php": "^7.1",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-apcu": "*",
        "ext-iconv": "*",
        "symfony/flex": "^1.0",
        "doctrine/doctrine-bundle": "^1.7",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "doctrine/orm": "^2.5",
        "egeloen/ckeditor-bundle": "^6.0",
        "guzzlehttp/guzzle": "^6.3",
        "incenteev/composer-parameter-handler": "^2.1",
        "javiereguiluz/easyadmin-bundle": "^1.17",
        "nelmio/cors-bundle": "^1.5",
        "orbitale/cms-bundle": "^3.0.5",
        "orbitale/doctrine-tools": "^0.5.6",
        "orbitale/entity-merger": "^0.6.0",
        "orbitale/imagemagick-php": "^1.6",
        "pierstoval/character_manager": "^0.6",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^5.0",
        "stof/doctrine-extensions-bundle": "^1.2",
        "symfony/console": "^3.4",
        "symfony/form": "^3.4",
        "symfony/framework-bundle": "^3.4",
        "symfony/lts": "^3",
        "symfony/monolog-bundle": "^3.1",
        "symfony/polyfill-apcu": "^1.6",
        "symfony/security": "^3.4",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/templating": "^3.4",
        "symfony/twig-bundle": "^3.4",
        "symfony/validator": "^3.4",
        "symfony/yaml": "^3.4",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "ext-zip": "*",
        "doctrine/doctrine-fixtures-bundle": "^2.4",
        "phpunit/phpunit": "^6.4",
        "pierstoval/web-test-case": "^0.2.0",
        "symfony/browser-kit": "^3.4",
        "symfony/css-selector": "^3.4",
        "symfony/debug-bundle": "^3.4",
        "symfony/dotenv": "^3.4",
        "symfony/phpunit-bridge": "^3.4",
        "symfony/stopwatch": "3.4",
        "symfony/var-dumper": "^3.4",
        "symfony/web-profiler-bundle": "^3.4",
        "symfony/web-server-bundle": "^3.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "autoloader-suffix": "EsterenPortal",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "AdminBundle\\": "src/AdminBundle",
            "AgateBundle\\": "src/AgateBundle",
            "CorahnRin\\": "src/CorahnRin",
            "Esteren\\": "src/Esteren",
            "EsterenMaps\\": "src/EsterenMaps",
            "Pierstoval\\": "src/Pierstoval",
            "UserBundle\\": "src/UserBundle"
        },
        "classmap": [
            "src/Kernel.php"
        ],
        "exclude-from-classmap": [
            "/src/*/vendor/",
            "/src/*/*/vendor/"
        ]
    },
    "autoload-dev": {
        "files": [
            "vendor/symfony/var-dumper/Resources/functions/dump.php"
        ]
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear --no-warmup": "symfony-cmd",
            "cache:warmup": "symfony-cmd",
            "ckeditor:install --clear=keep --quiet": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "compile": [
            "yarn run gulp test --prod --verbose -LLLL",
            "php bin/console doctrine:schema:update --dump-sql --force",
            "php bin/console doctrine:schema:validate || echo 'Doctrine schema not valid, please make sure it is correct.'",
            "php bin/console esterenmaps:map:generate-tiles 1"
        ]
    },
    "conflict": {
        "symfony/symfony": "*",
        "symfony/twig-bundle": "<3.3",
        "symfony/debug": "<3.3"
    },
    "extra": {
        "symfony": {
            "id": "01BWX3FPWM0F114CXPMK8WTWR6",
            "allow-contrib": true
        }
    },
    "authors": [
