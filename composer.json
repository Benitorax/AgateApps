{
    "name": "esteren/esteren",
    "license": "proprietary",
    "description": "Global Esteren project",
    "type": "project",
    "autoload": {
        "psr-4": {
            "AdminBundle\\": "src/AdminBundle",
            "AgateBundle\\": "src/AgateBundle",
            "CorahnRin\\": "src/CorahnRin",
            "Esteren\\": "src/Esteren",
            "EsterenMaps\\": "src/EsterenMaps",
            "Pierstoval\\": "src/Pierstoval",
            "UserBundle\\": "src/UserBundle"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ],
        "exclude-from-classmap": [
            "/src/*/vendor/",
            "/src/*/*/vendor/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/phpunit/"
        },
        "files": [
            "vendor/symfony/var-dumper/Resources/functions/dump.php"
        ]
    },
    "require": {
        "php": "^7.1",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-apcu": "*",
        "ext-iconv": "*",
        "symfony/framework-bundle": "3.3.*",
        "symfony/console": "3.3.*",
        "symfony/form": "3.3.*",
        "symfony/security": "3.3.*",
        "symfony/templating": "3.3.*",
        "symfony/twig-bundle": "3.3.*",
        "symfony/validator": "3.3.*",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "symfony/swiftmailer-bundle": "^2.6",
        "symfony/monolog-bundle": "^3.1",
        "symfony/polyfill-apcu": "^1.3",
        "sensio/distribution-bundle": "^5.0.19",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.1",

        "jms/serializer": "^1.6",
        "jms/serializer-bundle": "^2.0",
        "friendsofsymfony/rest-bundle": "^1.7",
        "nelmio/cors-bundle": "^1.5",
        "egeloen/ckeditor-bundle": "^5.0",
        "javiereguiluz/easyadmin-bundle": "^1.16",
        "stof/doctrine-extensions-bundle": "^1.2",
        "twig/extensions": "^1.5",

        "orbitale/cms-bundle": "^3.0",
        "orbitale/entity-merger": "^0.6",
        "orbitale/doctrine-tools": "^0.5.3",
        "orbitale/imagemagick-php": "^1.6",
        "pierstoval/character_manager": "^0.4",
        "guzzlehttp/guzzle": "^6.2.1"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.1",
        "symfony/browser-kit": "^3.3",
        "symfony/css-selector": "^3.3",
        "symfony/debug-bundle": "^3.3",
        "symfony/dotenv": "^3.3",
        "symfony/phpunit-bridge": "^3.3",
        "symfony/var-dumper": "^3.3",
        "symfony/web-profiler-bundle": "^3.3",
        "doctrine/doctrine-fixtures-bundle": "^2.3",
        "pierstoval/web-test-case": "^0.1.5",
        "phpunit/phpunit": "^5.7|^6.0"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ],
        "compile": [
            "yarn --production",
            "cd node_modules/node-sass && node scripts/build -f",
            "cd node_modules/optipng-bin && yarn --production",
            "node node_modules/gulp4/bin/gulp.js dump --prod --verbose",
            "rm web/config.php",
            "php bin/console doctrine:schema:update --dump-sql --force",
            "php bin/console doctrine:schema:validate || echo 'Doctrine schema not valid, please make sure it is correct.'",
            "php bin/console esterenmaps:map:generate-tiles 1"
        ],
        "warmup": [
            "php bin/console cache:clear --no-warmup",
            "php bin/console cache:warmup"
        ]
    },
    "config": {
        "autoloader-suffix": "EsterenPortal"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    },
    "authors": [
