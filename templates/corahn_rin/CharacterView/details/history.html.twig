{% trans_default_domain 'corahn_rin' %}

<div class="main row">
    <div class="col s12">
        <div class="row">
            <div class="col s4"><h2 class="text-3xl text-left">{{ 'character.history'|trans }}</h2></div>
            <div class="col s8">
                <div class="row">
                    <div class="col s6">
                        <h3 class="text-m">
                            {{ 'character.birthplace'|trans }}&nbsp;:
                            {{ character.birthplace.name }}
                        </h3>
                    </div>
                    <div class="col s6">
                        <h3 class="text-m">
                            {{ 'character.social_class'|trans }}&nbsp;:
                            {{ character.socialClass.name }}
                        </h3>
                    </div>
                </div>

                <h3 class="ib base">
                    {{ 'character.setbacks'|trans }}&nbsp;:
                </h3>
                {% for charSetback in character.setbacks if not charSetback.isAvoided%}
                    <h4 class="ib base">
                        {{ charSetback.setback.name }}
                    </h4>
                {% else %}
                    <h4 class="ib base">&mdash;</h4>
                {% endfor %}

                {% for charSetback in character.setbacks if charSetback.isAvoided%}
                    <h4 class="ib base">
                        {{ charSetback.setback.name }}
                        {{ 'character.setback_avoided'|trans }}
                    </h4>
                {% else %}
                    <h4 class="ib base">&mdash;</h4>
                {% endfor %}
            </div>

            <p class="story">{{ character.story }}</p>
        </div>
    </div>
</div>
