{% trans_default_domain 'corahn_rin' %}

<div class="main row">
    <div class="col s12">
        <h2 class="text-left">{{ 'character.sanity'|trans }}</h2>

        <h3>
            {{- 'character.mental_resist'|trans }}&nbsp;:&nbsp;
            {{- character.baseMentalResist -}}
            {%- if character.mentalResistBonus -%}
                &nbsp;&plus;&nbsp;{{ character.mentalResistBonus -}}
                &nbsp;&equals;&nbsp;{{ character.totalMentalResist -}}
            {%- endif -%}
        </h3>

        <table class="responsive-table trauma">
            <thead>
                <tr>
                    <th class="text-center">&nbsp;</th>
                    <th class="text-center">{{ 'character.mental_disorders.balance'|trans }}</th>
                    <th class="text-center">{{ 'character.mental_disorders.symptom'|trans }}</th>
                    <th class="text-center">{{ 'character.mental_disorders.syndrome'|trans }}</th>
                    <th class="text-center">{{ 'character.mental_disorders.madness'|trans }}</th>
                </tr>
            </thead>
            <tbody class="row">
                <tr>
                    <td>{{ 'character.trauma.title'|trans }}</td>
                    {% set trauma = character.trauma %}
                    {% set perma = character.traumaPermanent %}
                    {% for i in 0..19 -%}
                        {%- if loop.index0 is divisible by(5) %}<td class="text-center">{% endif -%}
                        {%- if perma > 0 -%}
                            <span class="white-text">●</span>
                            {%- set perma = perma - 1 -%}
                        {%- elseif trauma > 0 -%}
                            <span class="brown-text">●</span>
                            {%- set trauma = trauma - 1 -%}
                        {%- else -%}
                            <span class="grey-text text-darken-2">o</span>
                        {%- endif -%}
                        {%- if loop.index is divisible by(5) %}</td>{% endif -%}
                    {%- endfor %}
                </tr>
                <tr>
                    <td>{{ 'character.trauma.hardening'|trans }}</td>
                    {% set hardening = character.hardening %}
                    {% for i in 0..19 -%}
                        {%- if loop.index0 is divisible by(5) %}<td class="text-center">{% endif -%}
                        {%- if hardening > 0 -%}
                            <span class="white-text">●</span>
                            {%- set hardening = hardening - 1 -%}
                        {%- else -%}
                            <span class="grey-text text-darken-2">o</span>
                        {%- endif -%}
                        {%- if loop.index is divisible by(5) %}</td>{% endif -%}
                    {%- endfor %}
                </tr>
            </tbody>
            <tfoot class="text-xs">
                <tr>
                    <td colspan="5" class="lh1em">
                        <span class="text-l white-text">●</span> {{ 'character.trauma.permanent'|trans }}
                        <br>
                        <span class="brown-text text-l">●</span> {{ 'character.trauma.curable'|trans }}
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
