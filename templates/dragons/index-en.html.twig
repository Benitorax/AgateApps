{% extends 'dragons/dragons-layout.html.twig' %}

{% block title 'Dragons RPG' %}

{% block content_layout_class '' %}

{% block content_for_layout %}

    {% spaceless %}

    <h1 class="sr-only">Welcome to Dragons RPG portal</h1>

    <div id="index-banner" class="parallax-container valign-wrapper">
        <div class="section no-pad-bot">
            <div class="container">
                <h2 class="header center white-text text-shadow-black-10">{{ portal_element.title }}</h2>
                <div class="row center">
                    <h2 class="header col s12 light white-text text-shadow-black-10 text-xl">
                        <strong>{{ portal_element.subtitle }}</strong>
                    </h2>
                </div>
                {% if portal_element.buttonLink and portal_element.buttonText %}
                <div class="row center">
                    <a href="{{ portal_element.buttonLink }}" class="btn-large waves-effect waves-light bg-dragons-red">
                        {{ portal_element.buttonText }}
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
        <div class="parallax">
            <img src="{{ asset(uploaded_asset_url(portal_element.imageUrl)) }}">
        </div>
    </div>

    <div class="container">
        <div class="section">

            <div class="row">
                <div class="col s12 m4 hoverable">
                    <a href="http://shadowsofesteren.blogspot.fr/2012/06/faq-esteren-in-20-questions.html" class="bl">
                        <div class="portal_subtitle center" style="color: #f18f8d;"><span class="fa fa-feed">&nbsp;</span></div>
                        <h3 class="center text-xxl">The blog</h3>
                        <p>Join us to discover the new RPG based on D&D5 SRD rules!</p>
                    </a>
                </div>
                <div class="col s12 m4 hoverable">
                    <a href="https://forum.studio-agate.com" class="bl">
                        <div class="portal_subtitle center" style="color: #cd1d19;"><span class="fa fa-users">&nbsp;</span></div>
                        <h3 class="center text-xxl">Forum</h3>
                        <p>Join a community of hundreds of Dragons players.</p>
                    </a>
                </div>
                <div class="col s12 m4 hoverable">
                    <a href="https://www.dropbox.com/sh/bp2kfgn43ueu6ru/AAAZytOXUADMlVpQdEG-Ttl1a" class="bl">
                        <div class="portal_subtitle center" style="color: #440a08;"><span class="fa fa-dropbox">&nbsp;</span></div>
                        <h3 class="center text-xxl">Downloads</h3>
                        <p>Download character sheets and game helpers on this dedicated space.</p>
                    </a>
                </div>
            </div>

        </div>
    </div>

    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="{{ asset('img/dragons/Aventuriers.jpg') }}" alt="Dragons: Adventurers"></div>
    </div>

    {% endspaceless %}

{% endblock %}
