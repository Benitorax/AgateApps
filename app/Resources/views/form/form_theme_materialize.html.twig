{% extends 'form_div_layout.html.twig' %}

{%- block form_label -%}
    {% if label is not same as(false) -%}
        {%- if label_attr['data-error'] is not defined -%}
            {%- set label_attr = label_attr|merge({'data-error': 'KO'}) -%}
        {%- endif -%}
        {%- if label_attr['data-success'] is not defined -%}
            {%- set label_attr = label_attr|merge({'data-success': 'OK'}) -%}
        {%- endif -%}
    {%- endif -%}

    {{- parent() -}}
{%- endblock form_label -%}

{%- block form_row -%}
    {#- Override here is about adding "row" and "input-field" -#}
    <div class="row">
        <div class="input-field">
            {{- form_label(form) -}}
            {{- form_widget(form) -}}
        </div>
        {{- form_errors(form) -}}
    </div>
{%- endblock form_row -%}

{%- block form_errors -%}
    {#- Override here is about adding text coloring -#}
    {%- if errors|length > 0 -%}
        <ul class="red-text darken-3">
            {%- for error in errors -%}
                <li>{{ error.message }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{%- endblock form_errors -%}

{%- block button_attributes -%}
    {%- if attr.class is defined and 'btn' not in attr.class -%}
        {%- set attr = attr|merge({'class': attr.class~' btn'}) -%}
    {%- elseif attr.class is not defined or not attr.class -%}
        {%- set attr = attr|merge({'class': (attr.class~' btn'|trim)}) -%}
    {%- endif -%}
    {{- parent() -}}
{%- endblock button_attributes -%}
