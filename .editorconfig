; top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{md,yml,yml.dist,json,css,js,less,php,html,twig,xml,xml.dist}]
indent_brace_style = K&R
indent_size = 4
tab_width = 4

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

[*.md]
max_line_length = 80

[COMMIT_EDITMSG]
max_line_length = 0
